<!DOCTYPE html>
<html>
  <head>
    <title>ImmersiveRailsAssessment</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "Home", superheroes_path%>

    <%= form_tag superheroes_search_path, method: :get do %>
      <label for="search">Search Heroes by Superpower: </label>
      <%= text_field_tag(
          :search,
          params[:search],
          {placeholder: "Search", list: 'powers'}
      ) %>

      <datalist id="powers">
        <% Superpower.all.each do |p| %>
          <option value="<%= p.name %>"></option>
        <% end %>
      </datalist>
      <%= submit_tag "Search!" %>
    <% end %>



    <%= yield %>
  </body>
</html>
