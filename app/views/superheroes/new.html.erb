<h1>Create Superhero:</h1>

<%= form_for @superhero do |f| %>
<ul>
  <% if @superhero.errors.any? %>
  <div id = "error_explanation" >
    <li>There were some errors:</li>
  <% @superhero.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  <% end %>
</ul>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %>
  <br>
  <br>
  <%= f.collection_select :superpower_id, Superpower.all, :id, :name %>
  <br>
  <br>
  <%= f.submit "Creat New Superhero" %>



<% end %>
