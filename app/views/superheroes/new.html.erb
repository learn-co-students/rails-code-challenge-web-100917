<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Create A New Superhero!</title>
  </head>
  <body>
    <%= form_for @superhero do |f| %>
        <%= f.label :name %>:<br>
        <%= f.text_field :name %><br><br>

        <%= f.label :super_name%>:<br>
        <%= f.text_field :super_name %><br><br>

        <%= f.label :superpower %>:<br>
        <%= f.collection_select :superpower_id, Superpower.all, :id, :name %><br><br>

        <%= f.submit %>
    <% end %>

  </body>
</html>
