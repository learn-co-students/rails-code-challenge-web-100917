<h1>Create A Hero</h1>

<ul>
  <% @superhero.errors.full_messages.each do |e| %>
    <li class="error"><%= e %></li>
  <% end %>
</ul>
<%= form_for @superhero do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name %>
  <%= f.label :super_name %>
  <%= f.text_field :super_name%>
  <%= f.label :superpower_id %>
  <%= f.collection_select(
        :superpower_id,
        Superpower.all,
        :id,
        :name,
        { include_blank: "Pick A Power" }) %>
  <%= f.submit "A Hero Is Born" %>
<% end %>
